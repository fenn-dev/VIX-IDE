<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:VIX_Frontend.ViewModels"
        xmlns:models="using:VIX_Frontend.ViewModels"
        x:Class="VIX_Frontend.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="VIX IDE">

	<DockPanel Background="#FF111115">
		<Menu DockPanel.Dock="Top" Background="#FF252525" CornerRadius="8" Padding="3" Margin="5">
			<MenuItem Header="File" CornerRadius="8" Background="#FF3c3c3c"/>
		</Menu>

		<Border DockPanel.Dock="Left" Width="250" Background="#FF252525" CornerRadius="8" Padding="3" Margin="5">
			<StackPanel>
				<TextBlock Text="Project Explorer" Margin="0,0,0,5"/>
				<Button Content="Refresh" Command="{Binding RefreshCommand}" />
				<TreeView ItemsSource="{Binding FileTree}">
					<TreeView.DataTemplates>
						<TreeDataTemplate DataType="models:FileItem" ItemsSource="{Binding Children}">
							<TextBlock Text="{Binding Name}" />
						</TreeDataTemplate>
					</TreeView.DataTemplates>
				</TreeView>
			</StackPanel>
		</Border>

		<Border DockPanel.Dock="Bottom" Height="150" Background="#FF252525" CornerRadius="8" Padding="3" Margin="5">
			<TextBlock Text="Console / Output"/>
		</Border>

		<Border Background="#FF252525" CornerRadius="8" Padding="3" Margin="5">
			<TextBlock Text="Code Editor Area"/>
		</Border>
	</DockPanel>
</Window>
